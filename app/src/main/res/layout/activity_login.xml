<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:animateLayoutChanges="true">

    <!-- Espaciado superior flexible -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <!-- Header con ícono mejorado -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_mylocation"
            app:tint="#B91C3C"
            android:contentDescription="@string/app_name" />
    </androidx.cardview.widget.CardView>

    <!-- Título principal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_login"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <!-- Subtítulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Inventario del negocio de sus sueños"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:alpha="0.9"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="32dp"/>

    <!-- Card del formulario -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        app:cardElevation="16dp"
        app:cardCornerRadius="24dp">
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Título de bienvenida -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido Nuevamente"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Subtítulo de acceso -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accede a tu cuenta desde el lugar que necesites"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"/>

            <!-- Campo de usuario -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="@string/usuario"
                app:startIconDrawable="@drawable/ic_user_red"
                app:startIconTint="#DC2626"
                app:boxStrokeColor="#DC2626"
                app:hintTextColor="#DC2626"
                app:boxBackgroundColor="#F9FAFB"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#9CA3AF"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:hint="@string/contrasena"
                app:startIconDrawable="@drawable/ic_lock_red"
                app:startIconTint="#DC2626"
                app:endIconMode="password_toggle"
                app:boxStrokeColor="#DC2626"
                app:hintTextColor="#DC2626"
                app:endIconTint="#DC2626"
                app:boxBackgroundColor="#F9FAFB"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="#1A1A1A"
                    android:textColorHint="#9CA3AF"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mensaje informativo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:background="#F0F0F0"
                android:padding="12dp"
                android:layout_marginHorizontal="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:layout_marginEnd="8dp"
                    app:tint="#DC2626"
                    android:contentDescription="Información" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ingresa tus credenciales para continuar"
                    android:textSize="12sp"
                    android:textColor="#2D2D2D"/>

            </LinearLayout>

            <!-- Botón de ingresar -->
            <Button
                android:id="@+id/botonIngresar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/boton_ingresar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_gradient"
                android:textAllCaps="false"
                android:elevation="8dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Espaciado inferior flexible -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <!-- Información de versión -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoRide v1.0 - Sistema de Gestión"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:alpha="0.8"
        android:layout_marginBottom="32dp"/>

</LinearLayout>
