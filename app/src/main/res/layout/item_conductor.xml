<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textoLicencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Licencia: LIC123456"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textoPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa: ABC123"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textoModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chevrolet Spark 2020"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textoColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color: Blanco"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/textoAnio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±o: 2020"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/botonEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boton_editar"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/botonEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boton_eliminar"
                android:backgroundTint="@android:color/holo_red_dark"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

