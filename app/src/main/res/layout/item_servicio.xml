<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textoNombreServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GoRide EconÃ³mico"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textoDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio de transporte bÃ¡sico a bajo costo"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textoPrecioBase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Base: $5,000.00"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textoPrecioPorKm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Por Km: $1,500.00"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textoEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Activo"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_green_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/botonEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boton_editar"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/botonEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boton_eliminar"
                android:backgroundTint="@android:color/holo_red_dark"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

