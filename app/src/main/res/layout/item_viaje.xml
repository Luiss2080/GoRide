<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textoOrigen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Origen: Calle 10 # 20-30"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textoDestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destino: Carrera 50 # 80-90"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textoEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completado"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:padding="8dp"
                android:background="@android:color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textoFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/01/2026 - 08:30"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textoTarifa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarifa: $12,500.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/botonEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boton_editar"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/botonEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/boton_eliminar"
                android:backgroundTint="@android:color/holo_red_dark"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

