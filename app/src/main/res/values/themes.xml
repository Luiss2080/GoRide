<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Principal GoRide - Oscuro Elegante -->
    <style name="Base.Theme.GoRide" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colores Principales -->
        <item name="colorPrimary">@color/red_accent</item>
        <item name="colorPrimaryVariant">@color/red_primary_dark</item>
        <item name="colorSecondary">@color/red_primary</item>
        <item name="colorSecondaryVariant">@color/red_primary_dark</item>

        <!-- Fondos -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Textos -->
        <item name="colorOnPrimary">@color/text_on_red</item>
        <item name="colorOnSecondary">@color/text_on_red</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Estado de la barra de estado -->
        <item name="android:statusBarColor">@color/black_primary</item>
        <item name="android:navigationBarColor">@color/black_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Personalizaciones adicionales -->
        <item name="colorAccent">@color/accent_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_muted</item>

        <!-- Material Components -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

    </style>

    <!-- Tema aplicado -->
    <style name="Theme.GoRide" parent="Base.Theme.GoRide">
        <!-- Personalizaciones especÃ­ficas de la app -->
    </style>

    <!-- Estilo para botones principales -->
    <style name="ButtonStyle.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/red_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Estilo para TextInputLayout -->
    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/red_accent</item>
        <item name="hintTextColor">@color/red_accent</item>
        <item name="android:textColorHint">@color/text_muted</item>
        <item name="boxBackgroundColor">@color/surface_color</item>
    </style>

    <!-- Estilo para Cards -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

</resources>